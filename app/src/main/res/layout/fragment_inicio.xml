<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_verde"
    tools:context=".fragments.InicioFragment">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GymFitness"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bienvenido {user}!"
        android:textColor="@color/negroconcisoperfectoparafondosybordes"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:paddingHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/hsvCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"

        android:padding="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:background="@drawable/degradado_cielo"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_rutina"
                        app:tint="@color/celesteblanco"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rutinas"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:textColor="@color/celestemaocuro"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:background="@drawable/degradado_cielo"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_comida"
                        app:tint="@color/celesteblanco"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alimentacion"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:textColor="@color/celestemaocuro"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:background="@drawable/degradado_cielo"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_entrenamiento"
                        app:tint="@color/celesteblanco"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ejercisio"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:textColor="@color/celestemaocuro"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:background="@drawable/degradado_cielo"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_agenda"
                        app:tint="@color/celesteblanco"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agenda"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:textColor="@color/celestemaocuro"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Futuro plan: Dashboard con el progreso, planes y datos personales.
         En lugar de los items actuales. -->

    <!-- Temporalmente -->
    <!-- NOTA IMPORTANTE DMNFJKSNKFJA : Top_toBottomOf NO Bottom_toBottomOf | un poco se ingles noma. -->
    <!-- Top_toBottomOf = LA BENDITA PARTE DE ARRIBA DEL LAYOUT SE POSICIONARA DEBAJO DEL CONTEXTO QUE SE PUSO (EN ESTE CASO FUE UN LAYOUT). -->
    <!-- Bottom_toBottomOf = LA BENDITA PARTE DE ABAJO DEL LAYOUT (ABAJO) SE POSICIONARA DEBAJO DEL CONTEXTO QUE SE PUSO. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/hsvCategoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingVertical="18dp"
            android:paddingHorizontal="28dp"
            android:textColor="@color/verdeaunmasoscuro"
            android:text="Planes nutricionales:"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlanes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="18dp"
            tools:listitem="@layout/item_plan_nutricional"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>